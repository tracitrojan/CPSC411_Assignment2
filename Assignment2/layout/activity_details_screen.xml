<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="First Name: "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="Last Name: "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="CWID: "/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/p_first_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/p_last_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/p_cwid_id"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/p_button"
        android:text="Add Course"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="8">
        <TextView
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5px"
            android:text="Course ID"
            android:textAlignment="center"
            ></TextView>
        <TextView
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5px"
            android:text="Grade"
            android:textAlignment="center"
            ></TextView>
        <EditText
            android:id="@+id/p_c1"
            android:layout_column="0"
            android:layout_row="1"
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            ></EditText>
        <EditText
            android:id="@+id/p_g1"
            android:layout_column="1"
            android:layout_row="1"
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            ></EditText>
        <EditText
            android:id="@+id/p_c2"
            android:layout_column="0"
            android:layout_row="2"
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            ></EditText>
        <EditText
            android:id="@+id/p_g2"
            android:layout_column="1"
            android:layout_row="2"
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            ></EditText>
        <EditText
            android:id="@+id/p_c3"
            android:layout_column="0"
            android:layout_row="3"
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            ></EditText>
        <EditText
            android:id="@+id/p_g3"
            android:layout_column="1"
            android:layout_row="3"
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            ></EditText>
        <EditText
            android:id="@+id/p_c4"
            android:layout_column="0"
            android:layout_row="4"
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            ></EditText>
        <EditText
            android:id="@+id/p_g4"
            android:layout_column="1"
            android:layout_row="4"
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            ></EditText>
        <EditText
            android:id="@+id/p_c5"
            android:layout_column="0"
            android:layout_row="5"
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            ></EditText>
        <EditText
            android:id="@+id/p_g5"
            android:layout_column="1"
            android:layout_row="5"
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            ></EditText>
        <EditText
            android:id="@+id/p_c6"
            android:layout_column="0"
            android:layout_row="6"
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            ></EditText>
        <EditText
            android:id="@+id/p_g6"
            android:layout_column="1"
            android:layout_row="6"
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            ></EditText>
        <EditText
            android:id="@+id/p_c7"
            android:layout_column="0"
            android:layout_row="7"
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            ></EditText>
        <EditText
            android:id="@+id/p_g7"
            android:layout_column="1"
            android:layout_row="7"
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            ></EditText>

    </GridLayout>

    <LinearLayout
        android:id="@+id/course_list_id"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

</LinearLayout>